<% content_for :title, "Editing domain" %>

<div class="py-16">
  <div class="max-w-2xl mx-auto md:w-2/3 w-full px-4">
    <div class="bg-[#1E293B]/80 backdrop-blur-sm px-6 py-8 border border-yellow-500/20 rounded-xl shadow-xl">
      <h1 class="font-bold text-2xl text-gray-100">Editing domain</h1>
      <p class="text-base text-gray-400 mt-2">
        Update your domain settings below.
      </p>

      <%= render "form", domain: @domain %>

      <div class="mt-6 flex items-center space-x-4">
        <%= link_to "Show this domain", [:app, @domain], class: "text-gray-400 hover:text-gray-300 transition-colors" %>
        <%= link_to "Back to domains", app_domains_path, class: "text-gray-400 hover:text-gray-300 transition-colors" %>
      </div>
    </div>
  </div>
</div>
