<% content_for :title, "Domains" %>

<div class="py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-gray-800 px-6 py-8 border border-gray-700 rounded-xl shadow-xl">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8">
        <div>
          <h1 class="font-bold text-2xl text-gray-100">Domains</h1>
          <p class="text-base text-gray-400 mt-2">
            Monitor and analyze your domains' performance and rankings.
          </p>
        </div>
        <div class="flex items-center gap-4">
          <%= link_to new_app_domain_path, class: "inline-flex items-center px-4 py-2 bg-transparent border-2 border-yellow-500/30 rounded-md font-semibold transition-all duration-200 hover:border-yellow-500/60 hover:bg-yellow-500/10 text-white" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
            New domain
          <% end %>
        </div>
      </div>

      <% if notice %>
        <div class="mb-6 p-4 bg-green-500/10 border border-green-500/30 rounded-lg text-green-400 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <%= notice %>
        </div>
      <% end %>

      <% if @domains.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-700 text-sm" id="domains">
            <thead class="bg-gray-700/50 text-gray-300">
              <tr>
                <th class="px-4 py-3 text-left font-semibold">Domain</th>
                <th class="px-4 py-3 text-left font-semibold">Country</th>
                <th class="px-4 py-3 text-left font-semibold">Keywords</th>
                <th class="px-4 py-3 text-left font-semibold">Backlinks</th>
                <th class="px-4 py-3 text-left font-semibold">Added</th>
                <th class="px-4 py-3 text-left font-semibold">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-800">
              <% @domains.each do |domain| %>
                <tr class="hover:bg-gray-700/30">
                  <td class="px-4 py-3 font-medium text-indigo-300"><%= link_to domain.name, app_domain_path(domain), class: "hover:underline" %></td>
                  <td class="px-4 py-3 text-gray-300 uppercase"><%= domain.country %></td>
                  <td class="px-4 py-3 text-gray-300"><%= domain.keywords.count %></td>
                  <td class="px-4 py-3 text-gray-300"><%= domain.backlinks.count %></td>
                  <td class="px-4 py-3 text-gray-400"><%= l(domain.created_at.to_date, format: :long) %></td>
                  <td class="px-4 py-3">
                    <%= link_to "View", app_domain_path(domain), class: "text-yellow-400 hover:text-yellow-300 underline" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-300">No domains</h3>
          <p class="mt-1 text-sm text-gray-400">Get started by adding a new domain to monitor.</p>
          <div class="mt-6">
            <%= link_to new_app_domain_path, class: "inline-flex items-center px-4 py-2 bg-transparent border-2 border-yellow-500/30 rounded-md font-semibold transition-all duration-200 hover:border-yellow-500/60 hover:bg-yellow-500/10 text-white" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
              </svg>
              Add your first domain
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
