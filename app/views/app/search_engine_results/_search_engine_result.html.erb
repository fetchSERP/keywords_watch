<tr id="<%= dom_id search_engine_result %>" class="hover:bg-gray-700/30">
  <td class="px-4 py-3 font-medium text-indigo-300">
    <%= search_engine_result.site_name %>
  </td>
  <td class="px-4 py-3 text-gray-300">
    <a href="<%= search_engine_result.url %>" target="_blank" class="text-indigo-300 hover:text-indigo-200 hover:underline">
      <%= truncate(search_engine_result.url, length: 50) %>
    </a>
  </td>
  <td class="px-4 py-3 text-gray-300">
    <%= truncate(search_engine_result.title, length: 50) %>
  </td>
  <td class="px-4 py-3 text-gray-300">
    <span class="inline-flex items-center rounded-full bg-blue-100/10 px-2.5 py-0.5 text-xs font-medium text-blue-300">
      #<%= search_engine_result.ranking %>
    </span>
  </td>
  <td class="px-4 py-3 text-right">
    <div class="flex justify-end gap-2">
      <%= link_to [:app, search_engine_result], class: "text-yellow-400 hover:text-yellow-300" do %>
        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
          <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
        </svg>
      <% end %>
      <%= button_to [:app, search_engine_result], method: :delete, class: "text-red-400 hover:text-red-300", form: { data: { turbo_confirm: "Are you sure?" } } do %>
        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
      <% end %>
    </div>
  </td>
</tr>
