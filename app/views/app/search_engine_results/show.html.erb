<% content_for :title, "Search Engine Result Details" %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');
  
  body {
    font-family: 'Inter', sans-serif;
  }
</style>

<div class="min-h-screen bg-[#0F172A]">
  <main>
    <!-- Search Engine Result Details Section -->
    <section class="py-8 sm:py-16 bg-[#0F172A] text-white relative overflow-hidden">
      <div class="container mx-auto px-4 relative">
        <!-- Flash Messages -->
        <% if notice %>
          <div class="bg-green-900/20 backdrop-blur-sm rounded-lg p-6 text-white border border-green-500/30 shadow-[0_0_30px_rgba(34,197,94,0.1)] mb-8" id="notice">
            <div class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <p class="text-green-200"><%= notice %></p>
            </div>
          </div>
        <% end %>

        <!-- Header -->
        <div class="text-center mb-12">
          <div class="inline-block mb-6 px-4 py-2 bg-yellow-500/10 rounded-full border border-yellow-500/20">
            <span class="text-yellow-400 font-semibold">Result Details</span>
          </div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight bg-clip-text text-transparent bg-gradient-to-r from-white via-yellow-100 to-white">
            Search Result Details
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-gray-300 max-w-xl mx-auto">
            Detailed information about this search engine result.
          </p>
        </div>

        <!-- Main Content -->
        <div class="max-w-4xl mx-auto">
          <!-- Details Card -->
          <div class="bg-[#1E293B]/80 backdrop-blur-sm rounded-lg p-8 text-white border border-yellow-500/20 shadow-[0_0_30px_rgba(234,179,8,0.1)] mb-8">
            <div class="flex justify-between items-start mb-8">
              <div>
                <h2 class="text-xl font-semibold text-white mb-2">Result Information</h2>
                <p class="text-gray-300">Complete details for this search engine result.</p>
              </div>
              <div class="flex gap-3">
                <%= button_to [:app, @search_engine_result], method: :delete, class: "group relative px-6 py-3 bg-transparent border border-red-500/30 text-white rounded-md font-semibold transition-all duration-200 hover:border-red-500/60 hover:bg-red-500/10 inline-flex items-center", form: { data: { turbo_confirm: "Are you sure?" } } do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                  Delete
                <% end %>
              </div>
            </div>

            <div class="border border-yellow-500/20 rounded-lg overflow-hidden">
              <dl>
                <div class="bg-[#0F172A]/60 px-6 py-4 grid grid-cols-1 md:grid-cols-3 gap-4">
                  <dt class="text-sm font-semibold text-yellow-400">Site Name</dt>
                  <dd class="text-sm text-gray-200 md:col-span-2"><%= @search_engine_result.site_name %></dd>
                </div>
                <div class="bg-[#1E293B]/40 px-6 py-4 grid grid-cols-1 md:grid-cols-3 gap-4">
                  <dt class="text-sm font-semibold text-yellow-400">URL</dt>
                  <dd class="text-sm text-gray-200 md:col-span-2">
                    <a href="<%= @search_engine_result.url %>" target="_blank" class="text-yellow-400 hover:text-yellow-300 transition-colors break-all">
                      <%= @search_engine_result.url %>
                    </a>
                  </dd>
                </div>
                <div class="bg-[#0F172A]/60 px-6 py-4 grid grid-cols-1 md:grid-cols-3 gap-4">
                  <dt class="text-sm font-semibold text-yellow-400">Title</dt>
                  <dd class="text-sm text-gray-200 md:col-span-2"><%= @search_engine_result.title %></dd>
                </div>
                <div class="bg-[#1E293B]/40 px-6 py-4 grid grid-cols-1 md:grid-cols-3 gap-4">
                  <dt class="text-sm font-semibold text-yellow-400">Description</dt>
                  <dd class="text-sm text-gray-200 md:col-span-2"><%= @search_engine_result.description %></dd>
                </div>
                <div class="bg-[#0F172A]/60 px-6 py-4 grid grid-cols-1 md:grid-cols-3 gap-4">
                  <dt class="text-sm font-semibold text-yellow-400">Ranking</dt>
                  <dd class="text-sm text-gray-200 md:col-span-2">
                    <span class="inline-flex items-center rounded-full bg-blue-900/40 px-2.5 py-0.5 text-xs font-medium text-blue-200">
                      #<%= @search_engine_result.ranking %>
                    </span>
                  </dd>
                </div>
              </dl>
            </div>
          </div>

          <!-- Actions -->
          <div class="flex items-center justify-between pt-4 border-t border-yellow-500/20">
            <div>
              <%= link_to [:app, :search_engine_results], class: "group relative px-8 py-4 bg-transparent border border-yellow-500/30 text-white rounded-md font-semibold transition-all duration-200 hover:border-yellow-500/60 hover:bg-yellow-500/10 inline-flex items-center" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                Back to Results
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</div>
