<% content_for :title, "Search Engine Result Details" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <% if notice %>
    <div class="rounded-md bg-green-50 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-green-800"><%= notice %></p>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-gray-800/50 border border-gray-700 shadow-xl rounded-lg">
    <div class="px-6 py-5 flex justify-between items-center border-b border-gray-700">
      <div>
        <h3 class="text-lg leading-6 font-semibold text-gray-100">Search Engine Result Details</h3>
        <p class="mt-1 text-sm text-gray-400">Detailed information about this search result.</p>
      </div>
      <div class="flex gap-2">
        <%= button_to [:app, @search_engine_result], method: :delete, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500", form: { data: { turbo_confirm: "Are you sure?" } } do %>
          <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
          Delete
        <% end %>
      </div>
    </div>
    <div class="border-t border-gray-700">
      <dl>
        <div class="bg-gray-800/40 px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-400">Site Name</dt>
          <dd class="mt-1 text-sm text-gray-200 sm:mt-0 sm:col-span-2"><%= @search_engine_result.site_name %></dd>
        </div>
        <div class="bg-gray-800/40 px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-400">URL</dt>
          <dd class="mt-1 text-sm text-gray-200 sm:mt-0 sm:col-span-2">
            <a href="<%= @search_engine_result.url %>" target="_blank" class="text-indigo-600 hover:text-indigo-900 dark:text-indigo-400 dark:hover:text-indigo-300">
              <%= @search_engine_result.url %>
            </a>
          </dd>
        </div>
        <div class="bg-gray-800/40 px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-400">Title</dt>
          <dd class="mt-1 text-sm text-gray-200 sm:mt-0 sm:col-span-2"><%= @search_engine_result.title %></dd>
        </div>
        <div class="bg-gray-800/40 px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-400">Description</dt>
          <dd class="mt-1 text-sm text-gray-200 sm:mt-0 sm:col-span-2"><%= @search_engine_result.description %></dd>
        </div>
        <div class="bg-gray-800/40 px-6 py-4 sm:grid sm:grid-cols-3 sm:gap-4">
          <dt class="text-sm font-medium text-gray-400">Ranking</dt>
          <dd class="mt-1 text-sm text-gray-200 sm:mt-0 sm:col-span-2">
            <span class="inline-flex items-center rounded-full bg-blue-100 dark:bg-blue-900 px-2.5 py-0.5 text-xs font-medium text-blue-800 dark:text-blue-200">
              #<%= @search_engine_result.ranking %>
            </span>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <div class="mt-6">
    <%= link_to [:app, :search_engine_results], class: "inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-900 dark:text-indigo-400 dark:hover:text-indigo-300" do %>
      <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      Back to Search Engine Results
    <% end %>
  </div>
</div>
