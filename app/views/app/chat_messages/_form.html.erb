<div id="chat_input_form" class="p-4 sticky bottom-0 bg-[#0F172A]/95 backdrop-blur-sm border-t border-yellow-500/20">
  <%= form_with model: Current.user.chat_messages.build, url: app_chat_messages_path, method: :post, id: "chat_input_form" do |f| %>
    <%= f.text_area :body, rows: 3, 
        placeholder: "Ask about SEO strategies, keyword analysis, or domain insights...",
        class: "w-full p-3 rounded-lg border border-yellow-500/20 bg-[#1E293B]/60 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-500/40 focus:border-yellow-500/40 transition-all duration-200 resize-none" %>
    <%= f.submit "Send Message", class: "px-6 py-3 w-full mt-4 bg-gradient-to-r from-yellow-500 to-red-500 text-white rounded-md font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(234,179,8,0.3)] cursor-pointer inline-flex items-center justify-center" %>
  <% end %>
</div>