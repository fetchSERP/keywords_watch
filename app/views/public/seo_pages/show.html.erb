<%= content_for :title, @seo_page.title %>
<%= content_for :description, @seo_page.meta_description %>
<%= content_for :keywords, @seo_page.seo_keyword.name %>

<!-- Hero section -->
<section class="pt-8 sm:pt-24 pb-20 px-4 overflow-hidden">
  <div class="max-w-7xl mx-auto">
    <div class="flex flex-col md:flex-row items-center">
      <!-- Hero content -->
      <div class="w-full md:w-1/2 md:pr-8 mb-10 md:mb-0">
        <div class="inline-block px-4 py-3 bg-gray-800 rounded-full mb-6">
          <p class="text-sm flex items-center">
            <span class="mr-2 text-yellow-500 font-semibold">NEW</span> 
            <span class="text-gray-400">Google Ads Keyword Import</span>
            <i data-lucide="arrow-right" class="ml-2 h-4 w-4 text-gray-400"></i>
          </p>
        </div>
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6">
          <span class="bg-gradient-to-r from-red-500 to-yellow-500 bg-clip-text text-transparent">
            <%= @seo_page.headline %>
          </span>
        </h1>
        
        <p class="text-lg text-gray-300 mb-8 max-w-2xl">
          <%= @seo_page.subheading %>
        </p>
        
        <div class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4">
          <%= link_to "Start Free Trial", new_registrations_path, class: "px-8 py-3 text-center sm:text-left rounded-lg bg-gradient-to-r from-red-500 to-yellow-500 text-white font-medium hover:from-red-600 hover:to-yellow-600 transition-all transform hover:scale-105 shadow-lg hover:shadow-xl hover:shadow-red-500/20" %>
          <button class="px-8 py-3 rounded-lg bg-gray-800 text-white font-medium hover:bg-gray-700 transition-all flex items-center justify-center">
            <i data-lucide="search" class="mr-2 h-5 w-5"></i>
            Live Demo
          </button>
        </div>
        
        <div class="mt-8 flex items-center">
          <div class="flex -space-x-2">
            <div class="w-8 h-8 rounded-full border-2 border-gray-900 bg-gray-500"></div>
            <div class="w-8 h-8 rounded-full border-2 border-gray-900 bg-gray-600"></div>
            <div class="w-8 h-8 rounded-full border-2 border-gray-900 bg-gray-700"></div>
            <div class="w-8 h-8 rounded-full border-2 border-gray-900 bg-gray-800"></div>
          </div>
          <p class="ml-4 text-gray-400">
            <span class="text-white font-medium">2,500+</span> marketers already tracking
          </p>
        </div>
      </div>
      
      <!-- Dashboard preview -->
      <%= render "public/landing_page/dashboard_preview" %>
    </div>
  </div>
</section>

<div class="border-b border-gray-800"></div>

<section class="pt-12 pb-6 overflow-hidden">
  <div class="max-w-7xl mx-auto">
    <%= @seo_page.content.html_safe %>
  </div>
</section>

<div class="pb-12 text-center w-full sm:w-auto px-4">
  <%= link_to "/app", class: "w-full sm:w-auto group relative px-6 py-3 bg-gradient-to-r from-yellow-500 to-red-500 text-white rounded-md font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(234,179,8,0.3)] overflow-hidden inline-block" do %>
    <span class="relative z-10">Get Started with 250 Free Credits</span>
    <span class="absolute inset-0 bg-gradient-to-r from-red-500 to-yellow-500 transition-transform duration-200 translate-x-full group-hover:translate-x-0"></span>
  <% end %>
</div>